<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WanderLust</title>

  <!-- Bootstrap (just for alerts/buttons) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Your custom CSS -->
  <link rel="stylesheet" href="/css/index.css" />
</head>

<% layout('./layout/boilerplate') -%>

<body>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="alert success-alert alert-dismissible fade show" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
<div class="filter-top-right" id="filterWrapper">
  <!-- Filter Toggle Icon (visible only on small screens) -->
  <div class="filter-toggle-icon" onclick="toggleFilter()">
    <i class="fa-solid fa-filter"></i>
  </div>

  <!-- Price Filter Form -->
  <form class="price-select-form" id="priceForm" method="get" action="/listing/filter">
    <select name="price" onchange="this.form.submit()">
      <option disabled selected>Filter by price</option>
      <option value="0-1000">₹0 - ₹1000</option>
      <option value="1001-5000">₹1001 - ₹5000</option>
      <option value="5001-10000">₹5001 - ₹10,000</option>
      <option value="10001-20000">₹10,001 - ₹20,000</option>
    </select>
  </form>
</div>



  <!-- Grid Layout for Listings -->
  <div class="card-grid">
    <% for (let list of allList) { %>
      <div class="card">
        <a href="/listing/<%= list._id %>">
          <img src="<%= list.image.url %>" alt="Listing Image" class="card-img" />
        </a>
        <div class="card-body">
          <div class="card-info">
            <h2 class="card-title"><%= list.title %></h2>
            <p class="card-price">&#8377;<%= list.price.toLocaleString("en-IN") %> / night</p>
            <p class="card-location"><%= list.location %>, <%= list.country %></p>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap Script (only needed for dismissing alerts) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  function toggleFilter() {
    const form = document.getElementById("priceForm");
    form.classList.toggle("show");
  }
</script>

</body>
</html>
